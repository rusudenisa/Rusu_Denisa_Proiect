@page
@model Rusu_Denisa_Proiect.Pages.Bouquets.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Bouquet</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Bouquet.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Bouquet.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Bouquet.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Bouquet.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Bouquet.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Bouquet.Price)
		</dd>
		<dt class="col-sm-10">Flowers</dt>
			@{
				@:<ul>
				foreach (var flower in Model.Bouquet.FlowerBouquets)
				{
				@:<li class="col-sm-10">
						@flower.Flower.Name @: x @flower.Quantity
				@:</li>
				@:</ul>
			}
			}
	</dl>
</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.Bouquet?.Id">Edit</a> |
	<a asp-page="./Index">Back to List</a>
</div>
