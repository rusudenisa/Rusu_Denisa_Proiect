@page
@model Rusu_Denisa_Proiect.Pages.Bouquets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bouquet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bouquet.Id" />
            <div class="form-group">
                <label asp-for="Bouquet.Name" class="control-label"></label>
                <input asp-for="Bouquet.Name" class="form-control" />
                <span asp-validation-for="Bouquet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bouquet.Description" class="control-label"></label>
                <input asp-for="Bouquet.Description" class="form-control" />
                <span asp-validation-for="Bouquet.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                
                                for (var i=0; i<Model.Bouquet.FlowerBouquets.Count(); i++)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                    
                                    <input asp-for="@Model.Bouquet.FlowerBouquets[i].Id" hidden="hidden"/>
                                    <input asp-for="@Model.Bouquet.FlowerBouquets[i].FlowerId" hidden="hidden"/>
                                    <input asp-for="@Model.Bouquet.FlowerBouquets[i].BouquetId" hidden="hidden"/>
                                    <label>@Model.Bouquet.FlowerBouquets[i].Flower.Name</label>
                                    <input asp-for="@Model.Bouquet.FlowerBouquets[i].Quantity" />
                                    @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
