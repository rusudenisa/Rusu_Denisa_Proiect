@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="InputModel.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="InputModel.Email"></label>
                <span asp-validation-for="InputModel.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="InputModel.FirstName"></label>
                <span asp-validation-for="InputModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="InputModel.LastName"></label>
                <span asp-validation-for="InputModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.Adress" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="InputModel.Adress"></label>
                <span asp-validation-for="InputModel.Adress" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.Phone" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="InputModel.Phone"></label>
                <span asp-validation-for="InputModel.Phone" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="InputModel.Password"></label>
                <span asp-validation-for="InputModel.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="InputModel.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="InputModel.ConfirmPassword"></label>
                <span asp-validation-for="InputModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
